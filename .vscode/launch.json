{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Launch Program",
      "skipFiles": ["<node_internals>/**"],
      "program": "${workspaceFolder}/src/index.ts",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "sourceMaps": true,
      "env": {
        "PORT": "3001" // Establece aquí el puerto para tu aplicación
      },
      "preLaunchTask": "tsc: build - tsconfig.json"
    }
  ]
}